<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hiccup.kidpainting.drawinghelper.DrawingView
        android:id="@+id/mDrawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.hiccup.kidpainting.view.KidTextView
        android:id="@+id/tvComingSoon"
        android:transitionName="new_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feature_comming_soon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_medium"
        android:background="@drawable/bg_rounded_blue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/space_small"
        android:visibility="gone">
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="@dimen/navigation_size"
            android:layout_height="@dimen/navigation_size"
            android:background="@drawable/background_back"
            android:layout_margin="@dimen/space_small"/>
        <Button
            android:id="@+id/btnReplay"
            android:layout_width="@dimen/navigation_size"
            android:layout_height="@dimen/navigation_size"
            android:background="@drawable/background_replay"
            android:layout_margin="@dimen/space_small"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="@dimen/navigation_size"
            android:layout_height="@dimen/navigation_size"
            android:background="@drawable/background_next"
            android:layout_margin="@dimen/space_small"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/ivBackPreview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_back_img"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/padding_small"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivNextPreview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_next_img"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/padding_small"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/ic_back_size"
        android:layout_height="@dimen/ic_back_size"
        android:layout_marginLeft="@dimen/margin_back_button"
        android:layout_marginRight="@dimen/margin_back_button"
        android:layout_marginStart="@dimen/margin_back_button"
        android:layout_marginTop="@dimen/margin_back_button"
        android:background="@drawable/bg_back"/>

    <com.hiccup.kidpainting.view.KidTextView
        android:text="@string/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_medium"
        android:textColor="@color/tumblr_red"
        android:id="@+id/tvReview"
        android:textSize="@dimen/text_size_medium"
        android:layout_alignParentRight="true"/>
</RelativeLayout>